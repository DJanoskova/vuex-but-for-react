
{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/lib/**/*.tsx",
    "./src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
